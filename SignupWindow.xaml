<Window x:Class="WpfApp1.SignupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="SignupWindow"
        Width="785" Height="550"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        MouseDown="Window_MouseDown">

    <Border CornerRadius="10">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#EEF7FF" Offset="0.0"/>
                <GradientStop Color="#CDE8E5" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
        <Border CornerRadius="10"
    BorderThickness="1">

            <Border.BorderBrush>
                <SolidColorBrush Color="#CCCCCC"/>
            </Border.BorderBrush>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="0"
                       Source="/Images/ribbon_8626105.png"
                       Height="30"
                       VerticalAlignment="Center"
                       Margin="15,10,10,0"/>
                        <Button x:Name="btnMin"
                        Grid.Column="2"
                        Style="{StaticResource MinimizeBtn}"
                        HorizontalAlignment="Right"
                        Click="btnMin_Click">
                            <Button.Content>
                                <Image Source="/Images/delete.png" Height="15" Width="30" Opacity="0.5"/>
                            </Button.Content>
                        </Button>
                        <Button x:Name="btnClose"
                        Grid.Column="3"
                        Style="{StaticResource CloseBtn}"
                        Click="btnClose_Click">
                            <Button.Content>
                                <Image Source="/Images/close.png" Height="15" Width="30"/>
                            </Button.Content>
                        </Button>
                    </Grid>
                </Border>

                <Grid Grid.Row="1" Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Register Heading -->
                    <TextBlock Text="Register"
                               FontSize="30"
                               FontWeight="Bold"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"
                               Margin="10,5,0,10" />   

                    <!-- Registration Form Layout -->
                    <Grid Grid.Row="1" Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Column 1: Step 1 Fields -->
                        <StackPanel Grid.Column="0" Margin="5,10,20,10">
                            <TextBox x:Name="FirstnameTextBox" Style="{StaticResource WatermarkedTextBox}" Tag="First Name" Margin="0,0,0,20"/>
                            <TextBox x:Name="LastNameTextBox" Style="{StaticResource WatermarkedTextBox}" Tag="Last Name" Margin="0,0,0,20"/>
                            <TextBox x:Name="AddressTextBox" Style="{StaticResource WatermarkedTextBox}" Tag="Address" Margin="0,0,0,20"/>
                            <TextBox x:Name="BirthdayTextBox" Style="{StaticResource WatermarkedTextBox}" Tag="Birthday" Margin="0,0,0,20"/>
                            <ComboBox x:Name="GenderComboBox" Style="{StaticResource GenderComboBox}" MaxDropDownHeight="100" SelectedIndex="0" Margin="0,0,0,20">
                                <ComboBoxItem Content="Male"/>
                                <ComboBoxItem Content="Female"/>
                            </ComboBox>
                            <TextBox x:Name="PhoneNumberTextBox" Style="{StaticResource WatermarkedTextBox}" Tag="Phone Number"/>
                        </StackPanel>

                        <!-- Column 2: Step 2 Fields -->
                        <StackPanel Grid.Column="1" Margin="20,10,5,10">
                            <ComboBox x:Name="DepartmentComboBox" Style="{StaticResource DepartmentComboBox}" SelectedIndex="0" Margin="0,0,0,20">
                                <ComboBoxItem Content="HR"/>
                                <ComboBoxItem Content="Finance"/>
                                <ComboBoxItem Content="IT"/>
                                <ComboBoxItem Content="Marketing"/>
                                <ComboBoxItem Content="Operations"/>
                                <ComboBoxItem Content="Sales"/>
                            </ComboBox>
                            <ComboBox x:Name="PositionComboBox" MaxDropDownHeight="200" Style="{StaticResource PositionComboBox}" SelectedIndex="0" Margin="0,0,0,20">
                                <ComboBoxItem Content="Analyst"/>
                                <ComboBoxItem Content="Developer"/>
                                <ComboBoxItem Content="Designer"/>
                                <ComboBoxItem Content="Consultant"/>
                                <ComboBoxItem Content="Intern"/>
                            </ComboBox>
                            <TextBox x:Name="JoinedDatePicker" Style="{StaticResource WatermarkedTextBox}" Tag="Joined Date" Margin="0,0,0,20"/>
                            <TextBox x:Name="EmailAddressTextBox" Style="{StaticResource WatermarkedTextBox}" Tag="Email Address" Margin="0,0,0,20"/>
                            <PasswordBox x:Name="PasswordBox" Style="{StaticResource WatermarkedPasswordBox}" Tag="Password" PasswordChar="*" 
                         local:PasswordBoxHelper.Attach="True" 
                         local:PasswordBoxHelper.Password="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,20"/>
                            <PasswordBox x:Name="ConfirmPasswordBox" Style="{StaticResource WatermarkedPasswordBox}" Tag="Confirm Password" PasswordChar="*" 
                         local:PasswordBoxHelper.Attach="True" 
                         local:PasswordBoxHelper.Password="{Binding ConfirmPassword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,20"/>
                        </StackPanel>
                    </Grid>

                    <!-- Submit Button -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,0,20" Grid.Row="1">
                        <Button Content="Submit" Width="100" Margin="5" Click="SubmitButton_Click" Style="{StaticResource DeBtn}" Foreground="White"/>
                    </StackPanel>
                </Grid>

            </Grid>
        </Border>
    </Border>
        
</Window>
