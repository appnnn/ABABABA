<Window x:Class="WpfApp1.LeaveRequestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="LeaveRequestWindow"
        Width="785" Height="550"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        MouseDown="Window_MouseDown">

    <Border CornerRadius="10">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#EEF7FF" Offset="0.0"/>
                <GradientStop Color="#CDE8E5" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
        <Border CornerRadius="10"
     BorderThickness="1">

            <Border.BorderBrush>
                <SolidColorBrush Color="#CCCCCC"/>
            </Border.BorderBrush>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="0"
                        Source="/Images/ribbon_8626105.png"
                        Height="30"
                        VerticalAlignment="Center"
                        Margin="15,10,10,0"/>
                        <Button x:Name="btnMin"
                         Grid.Column="2"
                         Style="{StaticResource MinimizeBtn}"
                         HorizontalAlignment="Right"
                         Click="btnMin_Click">
                            <Button.Content>
                                <Image Source="/Images/delete.png" Height="15" Width="30" Opacity="0.5"/>
                            </Button.Content>
                        </Button>
                        <Button x:Name="btnClose"
                         Grid.Column="3"
                         Style="{StaticResource CloseBtn}"
                         Click="btnClose_Click">
                            <Button.Content>
                                <Image Source="/Images/close.png" Height="15" Width="30"/>
                            </Button.Content>
                        </Button>
                    </Grid>
                </Border>

                <Grid Grid.Row="1" Margin="5">
                    <Grid Margin="20">
                        <TextBlock Text="Remaining Leaves:" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                        <ListBox Name="LeavesList" Margin="0,30,0,180"/>

                        <ComboBox Name="LeaveTypeComboBox" Margin="0,220,0,150" Height="25" />
                        <Calendar Name="LeaveCalendar" Margin="0,260,0,50" SelectionMode="MultipleRange" />
                        <Button Content="Submit Leave Request" Margin="0,390,0,0" Height="30" Click="SubmitLeaveRequest_Click"/>
                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </Border>
</Window>
