<Window x:Class="WpfApp1.AddDepartment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="AddDepartment"
        Width="485" Height="250"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        MouseDown="Window_MouseDown">

    <Border CornerRadius="10">
        <Border.Background>
            <SolidColorBrush Color="#F0F2F5"/>
        </Border.Background>
        <Border CornerRadius="10"
        BorderThickness="1">

            <Border.BorderBrush>
                <SolidColorBrush Color="#CCCCCC"/>
            </Border.BorderBrush>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Button x:Name="btnClose"
                            Grid.Column="3"
                            Style="{StaticResource CloseBtn}"
                            Click="btnClose_Click">
                            <Button.Content>
                                <Image Source="/Images/close.png" Height="15" Width="30"/>
                            </Button.Content>
                        </Button>
                    </Grid>
                </Border>

                <Grid Grid.Row="1" Margin="40 0 40 10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Add Department" 
                                Grid.Row="0"
                                FontSize="30" 
                                FontWeight="Bold" 
                                HorizontalAlignment="Center" 
                                Margin="0 0 0 35"/>

                        <TextBox Grid.Row="1"
                                    x:Name="txtDepartment"
                                    Style="{StaticResource WatermarkedTextBox}" Tag="Department Name" BorderThickness="1"/>

                        <Button Content="Add" 
                                HorizontalAlignment="Center" 
                                Grid.Row="2"
                                VerticalAlignment="Top" 
                                Margin="0 10 0 20"
                                Style="{StaticResource DeBtn}"
                                Foreground="White"
                                Click="AddButton_Click"/>
                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </Border>
</Window>
